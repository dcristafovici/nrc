@media screen and (max-width: 1700px)
  .content
    width 1360px
  nav.menu ul li
    margin-right 40px
  .home-tagline
    padding-left 0
    &::before
      content none


  .home
    &-button
      padding-left 0
    &-items
      padding-right 0

  
  .today
    padding-top 100px
  .title h2 + span
    margin-top 0
  
  .solution-coat
    max-width: 600px
  .solution
    padding-bottom 0
  
  .reasons
    &-item
      margin-bottom 50px
      &__number
        width 50px
        margin-right 35px
        span
          font-size 50px
        
      &__center
        padding-left 50px
      

  .fraud
    padding-bottom 0
  
  .about
    &-video
      width calc(57.7160493827% + calc((100vw - 1360px) / 2))
      margin-left calc(-50vw + 680px)
  
  .team
    &-slider
      width calc(100% + calc((100vw - 1360px) / 2))

  .today-slider
    width calc(100% + ((100vw - 1360px) / 2))

  .videos-slider
    width calc(100% + calc((100vw - 1360px) / 2))
    margin-left calc(-50vw + 680px)

  .check-item__photo
    width calc(33.4567901235% + calc((100vw - 1360px) / 2))
    margin-left calc(-50vw + 680px)

  .reviews-slider
    width calc(100% + calc((100vw - 1360px) / 2))
    margin-left calc(-50vw + 680px)



  .find-items
    max-width: 100%

  
  .faq
    padding-bottom 100px

  .contacts #maped
    max-width: 70%
    display flex
    justify-content flex-end
    align-items flex-end

@media screen and (max-width: 1445px)
  .content  
    width 1140px
  
  .header
    top 20px
  
  nav.menu ul li
    margin-right 20px
  .header-phone a
    font-size 16px
  .header-phone
    margin-right 30px
    a
      padding-left 30px
  .button
    padding-left 50px
    padding-right 50px
  
  .home
    padding-top 200px
  h1
    font-size 50px
  .home-tagline span
    font-size 18px
  .home-video__info span
    font-size 20px
    line-height 1.5
  .home-item span
    font-size 16px
  .home-button
    margin-bottom 50px
  .home
    padding-bottom 50px

  
  .about
    &-video
      width calc(57.7160493827% + calc((100vw - 1140px) / 2))
      margin-left calc(-50vw + 570px)
  
  .team
    &-slider
      width calc(100% + calc((100vw - 1140px) / 2))

  .today-slider
    width calc(100% + ((100vw - 1140px) / 2))

  .videos-slider
    width calc(100% + calc((100vw - 1140px) / 2))
    margin-left calc(-50vw + 570px)

  .check-item__photo
    width calc(33.4567901235% + calc((100vw - 1140px) / 2))
    margin-left calc(-50vw + 570px)

  .reviews-slider
    width calc(100% + calc((100vw - 1140px) / 2))
    margin-left calc(-50vw + 570px)

  
  .home
    position relative
    &-icon
      height 100%
      img
        max-height: 100%
  h2
    font-size 40px

  .title h2 + span
    font-size 18px
  .solution-coat
    max-width: 500px
  .reasons-item
    width 33.3333333%
  
  .fraud-item
    width 32%
    margin-right 2%
    &:nth-child(4n)
      margin-right 2%
    &:nth-child(3n)
      margin-right 0
  
  .about-info p
    font-size 18px
    margin-bottom 30px
  .about-video
    height 500px
  .about-wrapper
    min-height: 500px 
  .good-slide__wrapper
    align-items flex-start
  .good-slide__text span
    font-size 18px
    br
      display none
    
  .good-slide__text p
    margin-top 30px
  .faq-item__answer p
    padding-left 0
    padding-right 0
    font-size 16px
  
  .proud
    padding-bottom 100px
  
  .contacts
    padding-top 100px