body
  min-width: 320px  
  overflow-x hidden
  font-size 16px
  font-family $Reg
  color $wh
  background #171717
.content
  width 1620px
  margin 0 auto


a
  text-decoration none
  color inherit 
  outline: none

img
  max-width 100%


main.cpo-main
  overflow hidden

h1
  font-size 72px
  line-height 1.2
  font-family $Semi
  text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);

h2
  font-size 50px
  line-height 1.33
  font-family $Semi
  color $wh

span.text-gradient
  background $gr
  -webkit-background-clip text
  color transparent


.title
  h2 + 
    span
      display block
      text-align center
      margin-top 25px
      font-size 22px
      line-height 1.3
      strong
        font-family $Bold
        color $ac


p
  color $wh
  font-size 18px
  line-height 1.5
  font-family $Reg

#overlay
  position fixed
  left 0
  top 0
  width 100%
  height 100%
  background #000000
  z-index 40
  opacity 0.5


body,
html 
  overflow hidden
  height 100vh


.title
  h2
    hdnt()
    + span 
      hdnt()
      transition-delay: .3s

  &.is-inview
    h2
      showt()
      + span 
        showt()