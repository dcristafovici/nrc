.callback
  position relative
  height 435px
  &-image
    position absolute
    left 0
    top 0
    width 100%
    height 100%
    z-index 2
    &::before
      content ''
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      background: rgba(0, 0, 0, 0.4);
    &::after
      content ''
      position absolute
      left 0
      top 0
      width 56.25%
      height 100%
      background: rgba(29, 26, 23, 0.79);
      box-shadow: 0px 4px 13px rgba(0, 0, 0, 0.25);
      border-bottom-right-radius: 300px
    img
      width 100%
      height 100%
      object-fit: cover
    
  .content
    position relative
    left 0
    top 0
    height 100%
    z-index 5
    display flex
    flex-direction: column
    align-items flex-start
    justify-content center
  
  .title
    margin-bottom 20px



.callback-form
  .form-group
    transform: translateX(-1vw)
    opacity 0
    transition: all 1s ease
    transition-delay: .2s
    &:nth-child(2)
      transition-delay: .4s
    &:nth-child(3)
      transition-delay: .6s
    &:nth-child(4)
      transition-delay: .8s
  &.is-inview
    .form-group
      opacity 1
      transform: translateX(0)