.fraud
  padding-top 150px
  padding-bottom 160px

  .title
    margin-bottom 40px
  
  &-info
    max-width: 950px
    margin-bottom 85px
    span
      display block
      margin-bottom 40px
      font-size 22px
      line-height 1.5
      color $wh
      font-family $Reg
      strong
        color $ac
        font-family $Bold
      &:last-child
        margin-bottom 0
      
  &-label
    margin-bottom 75px
    span
      display block
      font-size 22px
      font-family $Bold

  &-items
    display flex
    margin-bottom -30px
    flex-wrap: wrap
  &-item
    width 23.7654320988%
    margin-right 1.64609053493%
    bb()
    padding 50px 20px
    margin-bottom 30px
    border: 1px solid #FAF2D3
    transition: $tr
    font-size 18px
    line-height 1.5
    font-family $Medium
    &:hover
      border 1px solid $ac
    strong
      font-family $Bold
    &:nth-child(4n)
      margin-right 0
    

.fraud-info
  span
    hdnt()
    transition-delay: .2s
    display block
    &:nth-child(2)
      transition-delay: .4s
  
.fraud-label
  span
    hdnt()
    transition-delay: .6s
    display block
  
.fraud-info.is-inview,
.fraud-label.is-inview
  span
    showt()

.fraud-item
  hdnt()
  transition-delay: .3s
  &.is-inview
    showt()