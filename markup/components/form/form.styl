.form-group
  width 100%
  max-width: 400px
  margin-bottom 20px
  position relative
  &::after
    content ''
    position absolute
    bottom 0
    left 0
    width 100%
    height 10px
    background url('../img/assets/form/line.svg') no-repeat center/contain
  &.form-group
    &__button
      margin-top 40px
      &::after
        content none


input,
textarea
  width 100%
  border: none
  outline: none
  resize: none
  background none
  height 60px
  font-size 18px
  font-family $Reg
  text-shadow: 0px 4px 4px rgba(0, 0, 0, 0.25);
  color $wh
  +placeholder()
    font-family $Reg
    color $wh
button
  color $wh