.videos
  padding-bottom 150px
  &-slide
    width 1200px
    height 680px
    &__link
      display flex
      justify-content center
      align-items center
      width 100%
      height 100%
      position relative
      &::before
        content ''
        position absolute
        left 0
        top 0
        width 100%
        height 100%
        background: rgba(0, 0, 0, 0.38);
      &::after
        content ''
        position absolute
        width 150px
        height 150px
        left 50%
        top 50%
        margin-left -75px
        margin-top -75px
        background url('../img/assets/videos/play.svg') no-repeat center/contain
      img
        width 100%
        height 100%
        object-fit: cover

.videos
  &-slider
    width calc(100% + calc((100vw - 1620px) / 2))
    padding-right 125px
    bb()
    position relative
    margin-left calc(-50vw + 810px)
  .slick-slide
    outline: none
    margin 0 5px
  .slick-list 
    margin 0 -5px
  .slick-arrow
    &.slick-next
      display none !important
    &.slick-prev
      right -103px
      left auto
      bottom: auto
      top 50%
      transform: translateX(-50%)
      &::before
        transform: rotate(180deg) 
  