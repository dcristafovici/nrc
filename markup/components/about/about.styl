.about
  padding-top 95px
  padding-bottom 70px
  .title
    text-align center
    margin-bottom 94px

  .content
    position relative
    z-index 3
   
  &-wrapper
    display flex
    min-height: 600px
    justify-content flex-end
    align-items center
  &-info
    width 37.037037037%
    p
      font-family $EReg
      margin-bottom 55px
      font-size 22px
      &:nth-child(2n)
        strong
          color $wh
      strong
        color $ac
        font-family $Bold
    a
      display inline-flex
      color $ac
      font-size 18px
      font-family $EBold
      padding-left 50px
      bb()
      transition: $tr
      position relative
      &:hover
        transform: translateX(10px)
      &::before
        content ''
        position absolute
        left 0
        top 50%
        width 30px
        height 1px
        background $ac
  &-video
    height 600px
    position absolute
    left 0
    width: calc(57.7160493827% + calc((100vw - 1620px) / 2))
    margin-left  calc(-50vw + 810px);
    &__link
      position absolute
      left 0
      top 0
      width 100%
      height 100%
      z-index 3
      img   
        width 100%
        height 100%
        object-fit: cover