.check
  padding-top 50px
  .title
    text-align center
    margin-bottom 105px
  &-tabs
    margin-bottom 70px
    ul
      display flex
      align-items center
      li
        margin-right 50px
        font-size 22px
        line-height 1.27
        color $wh
        transition $tr
        cursor pointer
        font-family $Semi
        position relative
        &.active
          &::after
            opacity 1
        &::after
          content ''
          position absolute
          bottom -5px
          opacity 0
          left 0
          width 100%
          transition $tr
          height 1px
          background $ac


.check-items
  position relative
.check-item
  position absolute
  align-items center
  display flex
  justify-content space-between
  z-index -1
  visibility hidden
  pointer-events: none
  transform: translateX(-20px)
  opacity 0
  top 0
  left 0
  &.active
    z-index 4
    visibility visible
    pointer-events: all
    transform: translateX(0)
    opacity 1
    transition: $tr
    position relative
  &__list
    width 60.4938271605%
    li 
      padding-left 55px
      display block
      font-size 18px
      line-height 1.88
      position relative
      margin-bottom 15px
      color $txt
      &:last-child
        margin-bottom 0
      &::before
        content ''
        position absolute
        left 0
        top 5px
        width 18px  
        height 18px
        border-radius: 50%
        border 1px solid $txt
      &::after
        content ''
        position absolute
        left 7.5px
        top 12px
        background $ac
        width 6px
        height 6px
        border-radius: 50%
  &__photo
    width: calc(33.4567901235% + calc((100vw - 1620px) / 2))
    position relative
    margin-left calc(-50vw + 810px)
    img
      width 100%

