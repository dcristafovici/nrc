.popup
  max-width 1200px
  width 100%
  display flex
  justify-content space-between
  padding 0
  position relative
  display none
  background $wh
  border-radius: 10px
  overflow hidden
  &-wrapper
    display flex
    align-items center
    width 100%
  &-image
    width 50%
    height 680px
    img
      width 100%
      height 100%
      object-fit: cover

  &-form
    width 50%
    background $wh
    padding-left 35px
    padding-right 55px
    bb()

  &-title
    margin-bottom 20px
    span
      font-size 30px
      line-height 1.2
      font-family $Bold
      color #000000
  form
    input
      border-bottom 1px solid #000
      color #000000
      text-shadow: none
      + placeholder()
        color #000000
        text-shadow: none
  .form-group
    max-width: unset
    &::after
      content none

    &.form-group__button
      margin-top 40px
      button
        width 100%
        padding 0
        justify-content center


.popup-social
  &__name
    font-size 22px
    line-height 1.5 
    color #000000
    margin-bottom 30px
  &__nav
    ul
      display flex
      align-items center
    li
      margin-right 30px
      &:last-child
        margin-right 0
      a
        display flex
        justify-content center  
        align-items center
        width 36px
        height 36px
        border-radius: 50%
        background #000000
        img
          max-width: 50%


.popup
  &-span
    margin-top 30px
    margin-bottom 64px
    span
      display block
      font-size 22px
      line-height 1.5
      color #000000
  &-label
    margin-bottom 20px
    span
      font-family $Semi
      display block
      color #000000
      font-size 22px
      line-height 1.5
  &-phone
    margin-bottom 20px
    a
      padding-left 41px
      display block
      color #000000
      font-family: $EReg
      font-size 22px
      position relative
      &::before
        content ''
        position absolute
        left 0
        top 50%
        width 20px
        height 20px
        margin-top -10px
        background url('../img/assets/popup/phone.svg') no-repeat center/contain