mixin proud(data)
  section.proud
    .content
      .title(data-scroll data-scroll-speed='1.2' data-scroll-offset='50')
        h2 Есть, чем гордиться
        span Оценка работы №1 — мнение клиентов
    
      .videos-slider(data-scroll data-scroll-offset='50')

        .videos-slides
          
          //- Videos Slide
          .videos-slide
            a(href="#").videos-slide__link
              img(src="static/img/assets/proud/p1.jpg", alt="Videos Slide")
          
          //- Videos Slide
          .videos-slide
            a(href="#").videos-slide__link
              img(src="static/img/assets/proud/p2.jpg", alt="Videos Slide")
          